<MainMenu>
    BoxLayout:
        id: box
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: None
            height: 50

            Button:
                text: 'Back'
                on_press:
                    manager.current = manager.previous()

            Button:
                text: 'History'
                on_press:
                    manager.current = 'History'

            Button:
                text: 'Settings'
                on_press:
                    root.app.goto_screen("settings")

        ScreenManager:
            id: manager

            Screen:
                name: 'Main'
                FloatLayout:
                    orientation: 'vertical'

                    TextInput:
                        text: app.data
                        multiline: False
                        size_hint: .90, .15
                        pos: 20, root.top - 150
                        on_text: app.data = self.text

                    Button:
                        text: 'Search'
                        size_hint: .25, .10
                        pos: root.width * 3 / 5, root.top * 6 / 10
                        on_press:
                            root.app.results(app.data)
                            manager.current = 'Search'

                    Button:
                        text: 'Record'
                        size_hint: .40, .40
                        pos: root.width * 0.3, root.top * 1 / 10
                        on_release:
                            manager.current = 'Listen'

            Screen:
                id: search
                name: 'Search'

                FloatLayout:
                    
                    orientation: 'vertical'

                    TextInput:
                        text: app.data
                        multiline: False
                        size_hint: .90, .15
                        pos: 20, root.top - 150
                        on_text: app.data = self.text

                    Button:
                        text: 'Ignore'
                        size_hint: .25, .10
                        pos: root.width * 3 / 5, root.top * 6 / 10
                        on_press:
                            root.app.addToIgnore(app.data)

                    Button:
                        text: 'Another Search'
                        size_hint: 0.25, 0.10
                        pos: root.width * 0.4, root.top * 0.1
                        on_press:
                            manager.current = 'Main'

            Screen:
                id: definition
                name: 'Definition'

                FloatLayout:

                    Button:
                        text: 'Back to similar results'
                        size_hint: 0.25, 0.10
                        pos: root.width * 0.4, root.top * 0.1
                        on_press:
                            manager.current = manager.previous()

            Screen:
                id: history
                name: 'History'
                
                FloatLayout:
                    orientation: 'vertical'

                    Button:
                        text: 'Back to Main'
                        size_hint: 0.25, 0.10
                        pos: root.width * 0.4, root.top * 0.1
                        on_press:
                            manager.current = 'Main'

            Screen:
                name: 'Listen'
                
                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        text: 'Unfortunately, this feature is not yet available'
                        font_size: 15
                        top: root.top - 50

                    Button:
                        text: 'Try the translate tool instead!'
                        halign: 'center'
                        size: 150, 50
                        on_press:
                            manager.current = 'Main'

<SettingScreen>
    do_default_tab: False

    Button:
        text: 'Back'
        on_press:
            root.back_to_main()

    TabbedPanelItem:
        text: 'Packets'
        BoxLayout:
            Label:
                text: 'First tab content area'
            Button:
                text: 'Go back'
                on_press: root.back_to_main()

    TabbedPanelItem:
        id: ignore
        text: 'Ignored'
        orientation: 'vertical'

        FloatLayout:
            id: ignorebox
            orientation: 'vertical'

            Button:
                text: 'Back to Main'
                size_hint: 0.25, 0.10
                pos: root.width * 0.4, root.top * 0.15
                on_press:
                    root.back_to_main()
